<Window x:Class="TestClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestClientWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="3">
        <StackPanel>
            <Label>Current Tab:</Label>
            <Label x:Name="CurrentTab"/>
            <ComboBox x:Name="TabSelector" SelectionChanged="TabSelector_SelectionChanged"></ComboBox>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="Message" Width="500"></TextBox>
                <Button Click="Button_Click">Set Message</Button>
            </StackPanel>
            <Slider Minimum="0.0" Maximum="1.0" ValueChanged="Slider_ValueChanged"></Slider>
        </StackPanel>
    </Grid>
</Window>
